- if policy(Like.new).create?
  %div 
    - if like = current_user.liked(bookmark)
      = link_to like_path(bookmark, like), class: 'btn btn-danger', method: :delete do
        %i.glyphicon.glyphicon-star-empty>
          Unlike
    - else
      = link_to bookmark_likes_path(bookmark, Like.new), class: 'btn btn-primary', method: :post do
        %i.glyphicon.glyphicon-star>
          like